# Пример файла secrets.yaml для LD2450
# Скопируйте этот файл в secrets.yaml и заполните своими данными

# WiFi настройки
wifi_ssid: "MyHomeWiFi"           # Имя вашей WiFi сети
wifi_password: "MyWiFiPassword"   # Пароль WiFi

# OTA (Over-The-Air) обновления
ota_password: "secureOTA123"      # Пароль для обновлений по воздуху (минимум 8 символов)

# Hotspot (резервная точка доступа)
hotspot_password: "fallback123"   # Пароль для резервной точки доступа (минимум 8 символов)

# API Encryption Key - ОБЯЗАТЕЛЬНО СГЕНЕРИРУЙТЕ СВОЙ!
# Команда генерации: esphome encryption-key
# НЕ используйте примеры или ключи из интернета!
api_encryption_key: "GENERATE_YOUR_OWN_KEY_HERE"
